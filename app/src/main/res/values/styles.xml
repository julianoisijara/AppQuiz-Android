<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cabecalho">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF3D00</item>
    </style>

    <style name="perguntas">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:background">#6200EA</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="respostas">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1B5E20</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="botaoenviar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:background">#424242</item>
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>
